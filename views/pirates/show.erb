<h1>Pirate Info:</h1>
<div class="pirate">
  <h3>Name: <%= @pirate.name %></h3>
  <h3>Weight: <%= @pirate.weight %></h3>
  <h3>Height: <%=@pirate.height %></h3>
</div><br>


<h2>Ship Info:</h2>
<% @ships.each do |s| %>
    <div class="ship">
      <h3>Name: <%= s.name %></h3>
      <h3>Type: <%= s.type %></h3>
      <h3>Booty: <%= s.booty %></h3>
    </div><br>
<% end %>




